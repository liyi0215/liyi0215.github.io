.content {
  .loader {
    margin-top: 3em;

    .loader_letter {
      color: #000;
      font-family: "Helvetica", sans-serif;
      font-weight: bold;
      position: relative;
      display: inline-block;
      animation: bounce 0.5s cubic-bezier(0.165, 0.84, 0.44, 1) infinite alternate;
    }

    .loader_letter:nth-child(20n + 1) {
      animation-delay: 0s;
    }
    .loader_letter:nth-child(20n + 2) {
      animation-delay: 0.05s;
    }
    .loader_letter:nth-child(20n + 3) {
      animation-delay: 0.1s;
    }
    .loader_letter:nth-child(20n + 4) {
      animation-delay: 0.15s;
    }
    .loader_letter:nth-child(20n + 5) {
      animation-delay: 0.2s;
    }
    .loader_letter:nth-child(20n + 6) {
      animation-delay: 0.25s;
    }
    .loader_letter:nth-child(20n + 7) {
      animation-delay: 0.3s;
    }
    .loader_letter:nth-child(20n + 8) {
      animation-delay: 0.35s;
    }
    .loader_letter:nth-child(20n + 9) {
      animation-delay: 0.4s;
    }
    .loader_letter:nth-child(20n + 10) {
      animation-delay: 0.45s;
    }
    .loader_letter:nth-child(20n + 11) {
      animation-delay: 0.5s;
    }
    .loader_letter:nth-child(20n + 12) {
      animation-delay: 0.55s;
    }
    .loader_letter:nth-child(20n + 13) {
      animation-delay: 0.6s;
    }
    .loader_letter:nth-child(20n + 14) {
      animation-delay: 0.65s;
    }
    .loader_letter:nth-child(20n + 15) {
      animation-delay: 0.7s;
    }
    .loader_letter:nth-child(20n + 16) {
      animation-delay: 0.75s;
    }
    .loader_letter:nth-child(20n + 17) {
      animation-delay: 0.8s;
    }
    .loader_letter:nth-child(20n + 18) {
      animation-delay: 0.85s;
    }
    .loader_letter:nth-child(20n + 19) {
      animation-delay: 0.9s;
    }
    .loader_letter:nth-child(20n + 20) {
      animation-delay: 0.95s;
    }
  }
}

@keyframes bounce {
  0% {
    transform: translateY(0px);
  }
  100% {
    transform: translateY(-1em);
  }
}

.menu-item {
  cursor: pointer;
  overflow: hidden;
  transition: color 0.2s ease-in-out, background-color 0.2s ease-in-out;

  &:before,
  &:after {
    content: '';
    position: absolute;
    transition: transform 0.2s ease-in-out;
    transition-delay: 0.2s;
    background: cornflowerblue;
  }
  &:before {
    left: 0;
    top: 0;
    height: 2px;
    width: 100%;
    transform: translateX(100%);
  }
  &:after {
    right: 0;
    bottom: 0;
    height: 2px;
    width: 100%;
    transform: translateX(-100%);
  }
  &:hover {
    color: coral;
    background: #fafafa;
    transition-delay: 0.3s;
  }
  &:hover:before,
  &:hover:after {
    background: coral;
    transform: translate(0, 0);
    transition-delay: 0s;
  }

  .menu-item-link {
    color: inherit;
  }
}